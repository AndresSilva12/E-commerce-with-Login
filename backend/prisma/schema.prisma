generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model users {
  id Int @id @default(autoincrement())
  username String
  password String
  email String
  phoneNumber String
  name String
  lastName String
  age Int
}

model products {
  id String @id @default(cuid())
  name String
  description String?
  purchasePrice Float
  salePrice Float
  brand String
  variants productVariant[]
}

model productVariant {
  id String @id @default(cuid())
  code String @unique
  size String
  color String
  stock Int
  productId String
  createdAt DateTime  @default(now())
  product products @relation(fields: [productId], references: [id], onDelete: Cascade)
  @@unique([productId, size, color])
}